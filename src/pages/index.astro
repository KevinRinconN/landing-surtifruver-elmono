---
import { CarouselDemo } from "@/components/widget/HeroCarusel.tsx";
import Category from "@/components/widget/Category.astro";
import WidgetWrapper from "@/components/WidgetWrapper.astro";
import PageLayout from "@/layouts/PageLayout.astro";
import Price from "@/components/widget/Price.astro";
import AddressDetails from "@/components/widget/AddressDetails.astro";
import Contact from "@/components/widget/Contact.astro";
---

<PageLayout title="Surtifruver el Mono">
  <div class="absolute w-full h-full -top-1/4 bg-primary blur-3xl"></div>
  <div class="absolute left-0 top-0 bg-background/95 w-full h-full"></div>
  <div class="flex flex-col ">
    <WidgetWrapper >
      <CarouselDemo client:load />
    </WidgetWrapper>
    <WidgetWrapper class="mt-0">
      <Category />
    </WidgetWrapper>
    <WidgetWrapper>
      <Price />
    </WidgetWrapper>
    <div class="grid bg-muted">
      <WidgetWrapper>
        <AddressDetails />
      </WidgetWrapper>
    </div>
    <WidgetWrapper>
      <Contact />
    </WidgetWrapper>
  </div>
  
</PageLayout>
